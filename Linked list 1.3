//Printing All Dem Nodes
void printForwardNodes() {
	


	if (start == NULL && end == NULL) {
		puts("There is nothing here to print.");
	}
	else if (start == end) {
		printf("NuLL|<<[ - ");
		printf("%d", start->data);
		printf(" - ]>>|NuLL\n");
	}

	else {
		Nodeptr* current;
		current = start;
		printf("NuLL|<<[ - ");

		while (current != NULL)
		{
			printf("%d -- ", current->data);
			current = current->next;
		}
		printf(" - ]>>|NuLL\n");
	}
	mainMenu();
}

