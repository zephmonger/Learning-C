		scanf("%d", &tempNode->data);

		start = tempNode;
		end = tempNode;
		start->next = NULL;
		start->previous = NULL;
		printForwardNodes();
		mainMenu();
	}
	else {
		puts("Add your desired Int");
		scanf("%d", &tempNode->data);
		start->previous = tempNode;
		tempNode->next = start;
		tempNode->previous = NULL;
		start = tempNode;
		printForwardNodes();
		mainMenu();
	}
}

